# Maintainer: Alpyg <arch@alpyg.dev>
pkgname=alpyg-desktop
pkgver=1
pkgrel=0
pkgdesc="Desktop configuration for alpyg systems"
arch=('any')
url="https://github.com/Alpyg/arch-pkgs"
license=('MIT')
groups=('alpyg')
install=alpyg-desktop.install
depends=(
	'alpyg-base'

	'kitty'
	'pipewire'
	'wireplumber'

	'lightdm-gtk-greeter'

	'xorg-server'
)
source=(
	'alpyg-desktop.install'
	'lightdm.conf'
)
sha256sums=('SKIP' 'SKIP')

package() {
	install -Dm644 "$srcdir/lightdm.conf" "$pkgdir/etc/lightdm/lightdm-gtk-greeter.conf.d/50-autologin.conf"
}
